                      <input style="background-color: gray; color: white;" type="text" value="<%= currentUser.email %>" readonly/>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12 form-it">
                      <label>Name</label>
                      <input type="text" name="fullname_update" value="<%= currentUser.displayName %>"/>
