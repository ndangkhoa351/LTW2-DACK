<div class="hero common-hero">
    <div class="hero-ct">
        <h1>My tickets</h1>
    </div>
</div>
<!-- blog list section-->
<div class="page-single">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <% var i = 0; cinemas.forEach(cinema => { %>
                <div class="blog-item-style-1 blog-item-style-3">
                    <img
                        src="https://banner2.cleanpng.com/20180419/tdq/kisspng-film-cinema-logo-cinema-x-chin-5ad8baa1dec9f4.9139666015241529939126.jpg"
                        alt="Film Image"/>
                    <div class="blog-it-infor">
                        <div class="container" style="margin-bottom: 20px;">
                            <h3>
                                <a href="#" aria-disabled="true">Rạp: <%= cinema.displayName %></a>
                            </h3>
                            <p>Ghế phòng chiếu: <%= cinema.verticleSize %> x <%= cinema.horizontalSize %></p>
                        </div>

                        <div class="container" style="margin-bottom: 20px;"><h2> Danh sách suất chiếu:</h2> </div>
                        <% for (const val of showtimes[i]) { console.log(i); %>
                            <div class="container">
                                <h5>
                                    <a href="/booking/choose-seat?filmID=<%= val.filmId %>&showtimeID=<%= val.showId %>" aria-disabled="true"><%= val.name %></a>
                                </h5>
                                <% let date = val.startTime.toString().split(" "); %>
                                <p style="margin-top: -0px; margin-bottom: 8px;">Giờ chiếu: <%=`${date[1]} ${date[2]} ${date[3]} ${date[4]}`%></p>
                            </div>
                        <% } %>

                        
                    </div>     
                    

                </div>
                <% i = i + 1; }); %>
            </div>
        </div>
    </div>
</div>
